<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head'); %>
</head>

<body class="h-100 bg-light">
    <div class="container h-100">
        <div class="row h-100 d-flex align-items-center justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: .5rem!important;">
                    <div class="text-center">
                        <% if (auth) { %>
                            <img src="/img/logo.png" class="my-4" alt="<%= brand %> Logo" width="120" height="45">
                        <% } else { %>
                            <img src="<%= userImage %>" class="img-thumbnail rounded-circle" alt="<%= username %> Profile Image" width="192" height="192">
                        <% } %>
                    </div>

                    <div class="card-body">
                        <% switch (auth) { %>
                            <% default: %>
                                <h4 class="card-title"><%= fullName %></h4>
                                <h5 class="card-subtitle text-muted"><%= username %></h5>
                                <a href="/SignOut" class="btn btn-outline-danger mt-4">Sign Out</a>
                                <% break; %>
                            <% case 'SignIn': %>
                                <%- include('./partials/auth/signin'); %>
                                <% break; %>
                            <% case 'SignUp': %>
                                <%- include('./partials/auth/signup'); %>
                                <% break; %>
                            <% case 'Callback': %>
                                <%- include('./partials/auth/callback'); %>
                                <% break; %>
                        <% } %>
                    </div>
                </div>

                <footer class="mt-3">
                    <%- include('./partials/footer'); %>
                </footer>
            </div>
        </div>
    </div>
</body>

</html>